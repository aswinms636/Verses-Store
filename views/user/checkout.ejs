// Helper functions for validation and error handling
function getValidatedInput(fieldId, fieldName, pattern = null) {
    const value = document.getElementById(fieldId).value.trim();
    
    if (!value) {
        showError(fieldId, `${fieldName} is required`);
        return null;
    }

    if (pattern && !pattern.test(value)) {
        showError(fieldId, `Please enter a valid ${fieldName.toLowerCase()}`);
        return null;
    }

    return value;
}

function handleValidationErrors(errors) {
    if (errors && typeof errors === 'object') {
        Object.entries(errors).forEach(([field, message]) => {
            showError(field, message);
        });
    } else {
        Swal.fire({
            icon: 'error',
            title: 'Error!',
            text: 'Failed to save address'
        });
    }
}

// Update the showError function to be more robust
function showError(fieldId, message) {
    const errorSpan = document.getElementById(`${fieldId}-error`);
    const inputField = document.getElementById(fieldId);
    
    if (errorSpan) {
        errorSpan.textContent = message;
        errorSpan.style.display = 'block';
    }
    
    if (inputField) {
        inputField.classList.add('error');
        inputField.setAttribute('aria-invalid', 'true');
    }
}

// Update the clearErrors function to be more comprehensive
function clearErrors() {
    const errorMessages = document.getElementsByClassName('error-message');
    const inputs = document.getElementsByClassName('form-control');

    Array.from(errorMessages).forEach(span => {
        span.textContent = '';
        span.style.display = 'none';
    });

    Array.from(inputs).forEach(input => {
        input.classList.remove('error');
        input.removeAttribute('aria-invalid');
    });
}

