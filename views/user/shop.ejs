<div class="container">
    <div class="shop-container">
        <!-- Aside with Filters -->
        <aside class="filter-sidebar">
            <div class="filter-wrapper">
                <h4 class="mb-4">Filters</h4>
                
                <form id="filterForm" method="GET">
                    <!-- Category Filter -->
                    <div class="mb-4">
                        <h5>Categories</h5>
                        <div class="category-list">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" 
                                       name="category" id="allCategories" 
                                       value="" 
                                       <%= !selectedCategory ? 'checked' : '' %>>
                                <label class="form-check-label" for="allCategories">
                                    All Categories
                                </label>
                            </div>
                            <% categories.forEach(category => { %>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" 
                                           name="category" 
                                           id="<%= category._id %>" 
                                           value="<%= category._id %>"
                                           <%= selectedCategory === category._id.toString() ? 'checked' : '' %>>
                                    <label class="form-check-label" for="<%= category._id %>">
                                        <%= category.name %>
                                    </label>
                                </div>
                            <% }); %>
                        </div>
                    </div>

                    <!-- Price Range Filter -->
                    <div class="mb-4">
                        <h5>Price Range</h5>
                        <div class="price-range">
                            <div class="input-group mb-2">
                                <span class="input-group-text">₹</span>
                                <input type="number" class="form-control" 
                                       name="minPrice" 
                                       value="<%= currentMinPrice %>" 
                                       min="<%= priceRange.minPrice %>" 
                                       max="<%= priceRange.maxPrice %>">
                            </div>
                            <div class="input-group">
                                <span class="input-group-text">₹</span>
                                <input type="number" class="form-control" 
                                       name="maxPrice" 
                                       value="<%= currentMaxPrice %>" 
                                       min="<%= priceRange.minPrice %>" 
                                       max="<%= priceRange.maxPrice %>">
                            </div>
                        </div>
                    </div>

                    <input type="hidden" name="sort" value="<%= currentSort %>">
                    <button type="submit" class="btn btn-primary w-100">
                        Apply Filters
                    </button>
                    <button type="submit" class="btn btn-primary w-100">
                        Cancel
                    </button>
                </form>
            </div>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Search Bar -->
            <div class="search-wrapper mb-4">
                <form id="searchForm" class="d-flex">
                    <input type="text" 
                           class="form-control me-2" 
                           name="search" 
                           placeholder="Search products..."
                           value="<%= searchQuery || '' %>">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>

            <!-- Sorting Options -->
            <div class="sorting-wrapper mb-4">
                <div class="sorting-box d-flex justify-content-between align-items-center p-3 bg-white rounded shadow-sm">
                    <div class="found-items">
                        <span class="text-muted">Showing <%= products ? products.length : 0 %> items</span>
                    </div>
                    <div class="sorting-options d-flex align-items-center">
                        <label class="me-2 text-muted">Sort by:</label>
                        <form id="sortForm" method="GET" class="mb-0">
                            <input type="hidden" name="category" value="<%= selectedCategory || '' %>">
                            <input type="hidden" name="minPrice" value="<%= currentMinPrice %>">
                            <input type="hidden" name="maxPrice" value="<%= currentMaxPrice %>">
                            
                            <select class="form-select" name="sort" onchange="submitSort(this.value)">
                                <option value="default" <%= currentSort === 'default' ? 'selected' : '' %>>Featured</option>
                                <option value="priceAsc" <%= currentSort === 'priceAsc' ? 'selected' : '' %>>Price: Low to High</option>
                                <option value="priceDesc" <%= currentSort === 'priceDesc' ? 'selected' : '' %>>Price: High to Low</option>
                                <option value="nameAsc" <%= currentSort === 'nameAsc' ? 'selected' : '' %>>Name: A to Z</option>
                                <option value="nameDesc" <%= currentSort === 'nameDesc' ? 'selected' : '' %>>Name: Z to A</option>
                            </select>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="products-grid">
                <div class="row">
                    <% if (products && products.length > 0) { %>
                        <% products.forEach(product => { %>
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="single-product">
                                    <a href="/productDetails/<%= product._id %>">
                                        <img class="img-fluid" 
                                             src="/Uploads/product-Images/<%= product.productImage[0] %>" 
                                             alt="<%= product.productName %>"
                                             style="height: 250px; object-fit: cover;">
                                    </a>
                                    <div class="product-details">
                                        <h6><%= product.productName %></h6>
                                        <div class="price">
                                            <h6>₹<%= product.salePrice %></h6>
                                            <h6 class="l-through">₹<%= product.regularPrice %></h6>
                                        </div>
                                        <div class="prd-bottom">
                                            <a href="/addToCart/<%= product._id %>" class="social-info">
                                                <span class="ti-bag"></span>
                                                <p class="hover-text">Add to bag</p>
                                            </a>
                                            <a href="/addToWishlist/<%= product._id %>" class="social-info">
                                                <span class="lnr lnr-heart"></span>
                                                <p class="hover-text">Wishlist</p>
                                            </a>
                                            <a href="/productDetails?id=<%= product._id %>" class="social-info">
                                                <span class="lnr lnr-move"></span>
