    .banner-area {
        position: relative;
        background: #f4f4f4;
        padding: 120px 0 60px;
        margin-bottom: 40px;
    }

    .banner-overlay {
        position: relative;
        z-index: 2;
        color: #333;
    }

    .banner-content h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        color: #333;
    }

    .banner-content p {
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
        color: #666;
    }

    .breadcrumb {
        background: transparent;
        margin-bottom: 0;
    }

    .breadcrumb-item + .breadcrumb-item::before {
        content: ">";
    }

    .breadcrumb-item a {
        color: #3498db;
        text-decoration: none;
    }

    .breadcrumb-item.active {
        color: #666;
    }

    .search-results-count {
        margin-top: 1rem;
    }

    .search-results-count .badge {
        font-size: 1rem;
        padding: 0.5rem 1rem;
    }

    @media (max-width: 768px) {
        .banner-area {
            padding: 80px 0 40px;
        }

        .banner-content h2 {
            font-size: 2rem;
        }

        .banner-content p {
