<style>
    .banner-area {
        margin-top: 70px; /* Adjust this value based on your navbar height */
    }

    .main-content {
        position: relative;
        z-index: 1;
    }

    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        background: #fff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    @media (max-width: 768px) {
        .banner-area {
            margin-top: 60px; /* Adjust for mobile */
        }
    }

    /* Sorting Styles */
    .sorting-wrapper {
        margin-top: 30px;
    }

    .sorting-box {
        transition: all 0.3s ease;
    }

    .sorting-box:hover {
        box-shadow: 0 5px 15px rgba(0,0,0,0.1) !important;
    }

    .form-select {
        min-width: 200px;
        border-radius: 25px;
        padding: 8px 15px;
        border: 1px solid #dee2e6;
        cursor: pointer;
        background-color: #f8f9fa;
        transition: all 0.3s ease;
    }

    .form-select:hover {
        background-color: #fff;
        border-color: #adb5bd;
    }

    .form-select:focus {
        box-shadow: none;
        border-color: var(--primary-color);
    }

    @media (max-width: 768px) {
        .sorting-box {
            flex-direction: column;
            gap: 10px;
        }

        .sorting-options {
            width: 100%;
        }

        .form-select {
            width: 100%;
        }
    }

    .filter-wrapper {
        position: sticky;
        top: 90px;
        margin-bottom: 20px;
    }

    .category-list {
        max-height: 200px;
        overflow-y: auto;
        padding-right: 10px;
    }

    .price-range input {
        border-radius: 4px;
    }

    .form-check {
        margin-bottom: 8px;
    }

    .form-check-input:checked {
        background-color: #ff6b6b;
        border-color: #ff6b6b;
    }

    @media (max-width: 992px) {
        .filter-wrapper {
            position: static;
            margin-bottom: 20px;
        }
    }

