<div class="container">
    <div class="shop-container">
        <!-- Aside with Filters -->
        <aside class="filter-sidebar">
            <div class="filter-wrapper">
                <h4 class="mb-4">Filters</h4>
                
                <form id="filterForm" class="mb-4">
                    <!-- Category Filter -->
                    <div class="mb-4">
                        <h5>Categories</h5>
                        <div class="category-list">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" 
                                       name="category" id="allCategories" 
                                       value="all" 
                                       <%= !selectedCategory ? 'checked' : '' %>>
                                <label class="form-check-label" for="allCategories">
                                    All Categories
                                </label>
                            </div>
                            <% categories.forEach(category => { %>
                                <div class="form-check">
                                    <input class="form-check-input filter-input" 
                                           type="radio" 
                                           name="category" 
                                           id="<%= category._id %>" 
                                           value="<%= category._id %>"
                                           <%= selectedCategory === category._id.toString() ? 'checked' : '' %>>
                                    <label class="form-check-label" for="<%= category._id %>">
                                        <%= category.name %>
                                    </label>
                                </div>
                            <% }); %>
                        </div>
                    </div>

                    <!-- Price Range Filter -->
                    <div class="mb-4">
                        <h5>Price Range</h5>
                        <div class="price-range">
                            <div class="input-group mb-2">
                                <span class="input-group-text">₹</span>
                                <input type="number" 
                                       class="form-control filter-input" 
                                       name="minPrice" 
                                       placeholder="Min Price"
                                       value="<%= currentMinPrice || '' %>" 
                                       min="0">
                            </div>
                            <div class="input-group">
                                <span class="input-group-text">₹</span>
                                <input type="number" 
                                       class="form-control filter-input" 
                                       name="maxPrice" 
                                       placeholder="Max Price"
                                       value="<%= '' || currentMaxPrice %>" 
                                       min="0">
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Apply Filters</button>
                        <button type="button" class="btn btn-outline-secondary" onclick="resetFilters()">
                            <i class="fas fa-undo-alt me-1"></i> Reset All Filters
                        </button>
                    </div>
                </form>
            </div>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Search Bar -->
            <div class="search-wrapper mb-4">
                <form id="searchForm" class="d-flex">
                    <input type="text" 
                           class="form-control me-2" 
                           name="search" 
                           placeholder="Search products..."
                           value="<%= searchQuery || '' %>">
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>

            <!-- Sorting Options -->
