    }

    .single-related-product .desc {
        padding: 10px 15px;
    }

    .title {
        font-weight: 600;
        color: var(--dark-color);
        transition: all 0.3s ease;
        display: block;
        margin-bottom: 8px;
    }

    .title:hover {
        color: var(--primary-color);
    }

    /* Search Box Animation */
    .search-bar-container {
        position: fixed;
        top: 80px; /* Adjust based on your navbar height */
        left: 0;
        right: 0;
