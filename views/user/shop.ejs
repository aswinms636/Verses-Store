<script>
document.addEventListener('DOMContentLoaded', function() {
    const productsContainer = document.querySelector('.row.justify-content-center');
    const searchForm = document.getElementById('searchForm');
    const paginationLinks = document.querySelectorAll('.pagination .page-link');

    // Add sortSelect constant
    const sortSelect = document.querySelector('.form-select[name="sort"]');
    const filterForm = document.getElementById('filterForm');

    // Handle sort change
    sortSelect.addEventListener('change', async function() {
        const currentFilters = {
            sort: this.value,
            category: document.querySelector('input[name="category"]:checked')?.value || 'all',
            minPrice: document.querySelector('input[name="minPrice"]').value,
            maxPrice: document.querySelector('input[name="maxPrice"]').value,
            search: document.querySelector('input[name="search"]').value
        };
        await loadProducts(currentFilters);
    });

    // Handle search
    searchForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        const searchQuery = new FormData(searchForm).get('search');
        await loadProducts({ search: searchQuery, page: 1 });
    });

    // Handle pagination
    paginationLinks.forEach(link => {
        link.addEventListener('click', async function(e) {
            e.preventDefault();
            const page = this.dataset.page;
            await loadProducts({ page });
        });
    });

    // Add default values
    const defaultFilters = {
        category: 'all',
        minPrice: 0,  // Set default to 0
        maxPrice: 0,  // Set default to 0
        sort: 'default',
        search: '',
        page: 1
    };

    // Reset filters function
    window.resetFilters = async function() {
        try {
            Swal.fire({
                title: 'Resetting filters...',
                allowOutsideClick: false,
                didOpen: () => Swal.showLoading()
            });

            // Reset form elements
            filterForm.reset();
            sortSelect.value = 'default';
            document.querySelector('input[name="search"]').value = '';
            
            // Reset price inputs to 0
            document.querySelector('input[name="minPrice"]').value = '0';
            document.querySelector('input[name="maxPrice"]').value = '0';
            
            // Check "All Categories" radio
            document.querySelector('input[name="category"][value="all"]').checked = true;

            // Load products with default filters
            await loadProducts(defaultFilters);

            Swal.fire({
                icon: 'success',
                title: 'Filters Reset',
                text: 'All filters have been reset to default values',
                showConfirmButton: false,
                timer: 1500
            });

        } catch (error) {
            console.error('Error resetting filters:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to reset filters'
            });
        }
    };

    // Update loadProducts function to handle reset
    async function loadProducts(params = {}) {
        try {
            Swal.fire({
                title: 'Loading...',
                allowOutsideClick: false,
                didOpen: () => Swal.showLoading()
            });

            // Ensure price values are included even if they're zero
            const queryParams = {
                ...params,
                minPrice: params.minPrice ?? 0,
                maxPrice: params.maxPrice ?? 0
            };

            const queryString = new URLSearchParams(queryParams).toString();
            const response = await fetch(`/shop?${queryString}`, {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            });

            const data = await response.json();

            if (data.success) {
                updateProductsGrid(data.products);
                updatePagination(data.pagination);
                updateFoundItems(data.totalProducts);
                updateURL(params);
                
                // Update price range if provided
                if (data.priceRange) {
                    updatePriceRange(data.priceRange);
                }
            } else {
                throw new Error(data.message || 'Failed to load products');
            }

            Swal.close();
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message
            });
        }
    }

    // Add function to update price range inputs
    function updatePriceRange(priceRange) {
        const minPriceInput = document.querySelector('input[name="minPrice"]');
        const maxPriceInput = document.querySelector('input[name="maxPrice"]');
        
        if (minPriceInput && maxPriceInput) {
            minPriceInput.min = priceRange.minPrice;
            minPriceInput.value = priceRange.minPrice;
            maxPriceInput.max = priceRange.maxPrice;
            maxPriceInput.value = priceRange.maxPrice;
        }
    }

    // Add function to update URL
    function updateURL(params) {
        const url = new URL(window.location.href);
        Object.entries(params).forEach(([key, value]) => {
            if (value !== undefined && value !== '') {
                url.searchParams.set(key, value);
            } else {
                url.searchParams.delete(key);
            }
        });
        history.pushState({}, '', url);
    }

    // ... rest of your existing code ...
});
</script>

