        background-color: var(--primary-color);
        color: white;
        border-radius: 15px 0 0 15px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .exclusive-right {
        background-color: white;
        border-radius: 0 15px 15px 0;
        overflow: hidden;
    }

    .clockdiv {
        margin-bottom: 2rem;
    }

    .clock-wrap {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
    }

    .clockinner {
