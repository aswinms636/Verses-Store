<script>
document.addEventListener('DOMContentLoaded', function() {
    const productsContainer = document.querySelector('.row.justify-content-center');
    const searchForm = document.getElementById('searchForm');
    const paginationLinks = document.querySelectorAll('.pagination .page-link');

    // Handle search
    searchForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        const searchQuery = new FormData(searchForm).get('search');
        await loadProducts({ search: searchQuery, page: 1 });
    });

    // Handle pagination
    paginationLinks.forEach(link => {
        link.addEventListener('click', async function(e) {
            e.preventDefault();
            const page = this.dataset.page;
            await loadProducts({ page });
        });
    });

    async function loadProducts(params = {}) {
        try {
            // Show loading indicator
            Swal.fire({
                title: 'Loading...',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            // Build URL with current filters and new parameters
            const urlParams = new URLSearchParams(window.location.search);
            Object.entries(params).forEach(([key, value]) => {
                urlParams.set(key, value);
            });

            const response = await fetch(`/shop?${urlParams.toString()}`, {
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            });

            const data = await response.json();

            if (data.products) {
                // Update URL without refreshing page
                history.pushState({}, '', `?${urlParams.toString()}`);
                
                // Update banner information
                updateBanner(data.bannerInfo);
                
                // Update products grid
                updateProductsGrid(data.products);
                
                // Update pagination
                updatePagination(data.pagination);
            }

            Swal.close();
        } catch (error) {
            console.error('Error loading products:', error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to load products'
            });
        }
    }

    function updateBanner(bannerInfo) {
        const bannerContent = document.querySelector('.banner-content');
        bannerContent.innerHTML = `
            <h2>${bannerInfo.title}</h2>
            <p>${bannerInfo.subtitle}</p>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb justify-content-center">
                    ${bannerInfo.breadcrumbs.map((crumb, index) => `
                        <li class="breadcrumb-item ${index === bannerInfo.breadcrumbs.length - 1 ? 'active' : ''}">
                            ${index === bannerInfo.breadcrumbs.length - 1 
                                ? crumb.label 
                                : `<a href="${crumb.url}">${crumb.label}</a>`
                            }
                        </li>
                    `).join('')}
                </ol>
            </nav>
            ${bannerInfo.searchQuery ? `
                <div class="search-results-count mt-3">
                    <span class="badge bg-primary">
                        ${bannerInfo.totalProducts} products found
                    </span>
                </div>
            ` : ''}
        `;
    }

    function updateProductsGrid(products) {
        const productsHTML = products.map(product => `
            <div class="col-lg-3 col-md-6">
                <div class="single-product">
                    <a href="/productDetails/${product._id}">
                        <img class="img-fluid" 
                             src="/Uploads/product-Images/${product.productImage[0]}" 
                             alt="${product.productName}"
                             style="height: 250px; object-fit: cover;">
                    </a>
                    <div class="product-details">
                        <h6>${product.productName}</h6>
                        <div class="price">
                            <h6>₹${product.salePrice}</h6>
                            <h6 class="l-through">₹${product.regularPrice}</h6>
                        </div>
                        <div class="prd-bottom">
                            <a href="/addToCart/${product._id}" class="social-info">
                                <span class="ti-bag"></span>
                                <p class="hover-text">Add to bag</p>
                            </a>
                            <a href="/addToWishlist/${product._id}" class="social-info">
                                <span class="lnr lnr-heart"></span>
                                <p class="hover-text">Wishlist</p>
                            </a>
                            <a href="/productDetails/${product._id}" class="social-info">
                                <span class="lnr lnr-move"></span>
                                <p class="hover-text">View More</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        `).join('');

        productsContainer.innerHTML = productsHTML;
    }

    function updatePagination(pagination) {
        // Update pagination UI based on new data
        const paginationHTML = `
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    ${pagination.hasPrevPage ? `
                        <li class="page-item">
                            <a class="page-link" href="#" data-page="${pagination.currentPage - 1}">Previous</a>
                        </li>
                    ` : ''}
                    
                    ${Array.from({ length: pagination.totalPages }, (_, i) => i + 1)
                        .map(i => `
                            <li class="page-item ${pagination.currentPage === i ? 'active' : ''}">
                                <a class="page-link" href="#" data-page="${i}">${i}</a>
                            </li>
                        `).join('')}
                    
                    ${pagination.hasNextPage ? `
                        <li class="page-item">
                            <a class="page-link" href="#" data-page="${pagination.currentPage + 1}">Next</a>
                        </li>
                    ` : ''}
                </ul>
            </nav>
        `;

        document.querySelector('.pagination-wrapper').innerHTML = paginationHTML;
        
        // Reattach event listeners to new pagination links
        document.querySelectorAll('.pagination .page-link').forEach(link => {
            link.addEventListener('click', async function(e) {
                e.preventDefault();
                const page = this.dataset.page;
                await loadProducts({ page });
            });
        });
    }
});
</script>

