    }

    .search-input-group {
        display: flex;
        align-items: center;
        background: white;
        border-radius: 30px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .search-input {
        flex: 1;
        border: none;
        padding: 15px 25px;
        font-size: 1rem;
        outline: none;
        background: transparent;
    }

    .search-button {
        padding: 15px 30px;
        border: none;
        background: var(--primary-color);
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .search-button:hover {
        background: var(--secondary-color);
    }

    /* New Styles for Modern Banner */
    .modern-banner {
        padding: 180px 0 100px; /* Increased top padding to account for navbar and search */
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        position: relative;
        overflow: hidden;
    }

    .banner-content-new {
        position: relative;
        z-index: 2;
    }

    .banner-content-new h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: fadeInUp 0.5s ease-out;
    }

    .banner-content-new p {
        font-size: 1.2rem;
        color: var(--dark-color);
        margin-bottom: 2rem;
        animation: fadeInUp 0.5s ease-out 0.2s;
        animation-fill-mode: both;
    }

    .banner-buttons {
        display: flex;
        gap: 1rem;
        margin-bottom: 2rem;
        animation: fadeInUp 0.5s ease-out 0.4s;
        animation-fill-mode: both;
    }

    .btn-shop-primary {
        background: var(--primary-color);
        color: white;
        padding: 15px 35px;
        border-radius: 30px;
        font-weight: 600;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-shop-secondary {
        background: transparent;
        color: var(--primary-color);
        padding: 15px 35px;
        border-radius: 30px;
        font-weight: 600;
        border: 2px solid var(--primary-color);
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-shop-primary:hover,
    .btn-shop-secondary:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .banner-features {
        display: flex;
        gap: 2rem;
        margin-top: 2rem;
        animation: fadeInUp 0.5s ease-out 0.6s;
        animation-fill-mode: both;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--dark-color);
    }

    .feature-item i {
        color: var(--primary-color);
    }

    .banner-image {
        position: relative;
        animation: float 6s ease-in-out infinite;
    }

    @keyframes float {
        0% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-20px);
        }
        100% {
            transform: translateY(0px);
        }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive adjustments */
    @media (max-width: 992px) {
        .modern-banner {
            padding: 160px 0 60px;
        }

        .banner-content-new h1 {
            font-size: 2.5rem;
        }

        .banner-features {
            flex-wrap: wrap;
        }
    }

    @media (max-width: 768px) {
        .search-bar-container {
            top: 60px;
        }

        .banner-content-new h1 {
            font-size: 2rem;
        }

        .banner-image {
            margin-top: 2rem;
        }

        .banner-buttons {
            flex-direction: column;
        }

        .banner-features {
            justify-content: center;
        }
    }
</style>

