    <style>
        /* Import Google Fonts */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap');

        .wishlist-container {
            width: 90%;
            max-width: 1140px;
            margin: 50px auto;
            padding: 30px;
            background-color: #f9f9f9;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }

        .cart-header {
            text-align: center;
            margin-bottom: 30px;
            color: #333;
            font-weight: 600;
            position: relative;
        }

        .cart-header:after {
            content: '';
            display: block;
            width: 50px;
            height: 3px;
            background: #ff6c00;
            margin: 10px auto;
        }

        .wishlist-items {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .wishlist-item {
            display: flex;
            align-items: center;
            border: 1px solid #eee;
            padding: 15px;
            border-radius: 10px;
            background: #fff;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
        }

        .wishlist-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .wishlist-item-image {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 25px;
        }

        .wishlist-item-info {
            flex: 1;
            text-align: left;
        }

        .wishlist-item-info h3 {
            font-size: 18px;
            margin-bottom: 8px;
            color: #333;
        }

        .wishlist-item-info p {
            margin-bottom: 6px;
            color: #666;
            font-size: 14px;
        }

        .remove-btn {
            background: #ff6c00;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 10px;
            font-size: 14px;
        }

        .remove-btn:hover {
            background: #e25e00;
        }

        .empty-wishlist-message {
            font-size: 18px;
            color: #888;
            text-align: center;
            padding: 50px 0;
        }

        .continue-shopping {
            display: inline-block;
            margin-top: 20px;
            color: #ff6c00;
            text-decoration: none;
            font-weight: 600;
        }

        .continue-shopping:hover {
            text-decoration: underline;
        }

        @media (max-width: 768px) {
            .wishlist-item {
                flex-direction: column;
                text-align: center;
            }

            .wishlist-item-image {
                margin-right: 0;
                margin-bottom: 15px;
            }

            .wishlist-item-info {
                text-align: center;
            }
        }

        .footer-area {
            background: #222222;
            padding: 70px 0px;
            color: #fff;
            margin-top: 50px;
        }

        .footer-area h6 {
            color: #fff;
            margin-bottom: 25px;
            font-size: 18px;
            font-weight: 600;
        }

        .footer-area p {
            color: #777777;
            line-height: 1.8;
        }

        .footer-social a {
            padding-right: 25px;
            color: #777777;
            transition: all 0.3s ease;
        }

        .footer-social a:hover {
            color: #ff6c00;
        }

        .single-footer-widget input {
            border: none;
            width: 80%;
            padding: 10px;
            border-radius: 4px;
            background: #f9f9f9;
        }

        .single-footer-widget .click-btn {
            background-color: #ff6c00;
            color: #fff;
            border: 0;
            padding: 6px 12px;
            border-radius: 4px;
            margin-left: 10px;
        }

        .footer-bottom {
            margin-top: 50px;
            padding-top: 20px;
            border-top: 1px solid #333;
        }

        .footer-text {
            color: #777777;
        }

        .instafeed {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .instafeed li {
            margin-bottom: 10px;
        }

        .instafeed li a {
            color: #777777;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .instafeed li a:hover {
            color: #ff6c00;
        }
    </style>
    <!-- Include SweetAlert CSS and JS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.20/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.20/dist/sweetalert2.all.min.js"></script>
