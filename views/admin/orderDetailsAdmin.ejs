<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #b0d5de;
            --primary-light: #d4e7ec;
            --text-dark: #2c3e50;
            --border-radius: 12px;
        }

        body {
            background-color: #f8f9fa;
            color: var(--text-dark);
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }

        .main-container {
            background-color: white;
            border-radius: var(--border-radius);
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
            padding: 2rem;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .section-card {
            background-color: white;
            border-radius: var(--border-radius);
            border: 1px solid var(--primary-light);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .order-header {
            background-color: var(--primary-color);
            color: white;
            padding: 1.5rem;
            border-radius: var(--border-radius);
            margin-bottom: 2rem;
        }

        .order-id {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .info-item {
            background-color: #ffffff;
            padding: 1rem;
            border-radius: var(--border-radius);
            border: 1px solid var(--primary-light);
        }

        .info-label {
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0.3rem;
        }

        .info-value {
            font-weight: 500;
            color: var(--text-dark);
        }

        .table {
            border-radius: var(--border-radius);
            overflow: hidden;
        }

        .table thead {
            background-color: var(--primary-color);
            color: white;
        }

        .table th {
            font-weight: 500;
            border: none;
        }

        .status-select {
            border: 2px solid var(--primary-color);
            border-radius: var(--border-radius);
            padding: 0.5rem;
            width: 100%;
            max-width: 300px;
        }

        .update-btn {
            background-color: var(--primary-color);
            border: none;
            padding: 0.8rem 2rem;
            border-radius: var(--border-radius);
            color: white;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .update-btn:hover {
            background-color: #9ac2cc;
            transform: translateY(-2px);
        }

        .price-summary {
            background-color: var(--primary-light);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-top: 2rem;
        }

        .price-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }

        .price-item.total {
            border-top: 2px solid var(--primary-color);
            margin-top: 1rem;
            padding-top: 1rem;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container main-container">
        <div class="order-header">
            <h4 class="mb-1">Order Details</h4>
            <div class="order-id">#<%= order.orderId %></div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <!-- Customer Information -->
                <div class="section-card">
                    <h5 class="mb-3"><i class="fas fa-user me-2"></i>Customer Information</h5>
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Name</div>
                            <div class="info-value"><%= order.userId.name %></div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Email</div>
                            <div class="info-value"><%= order.userId.email %></div>
                        </div>
                    </div>
                </div>

                <!-- Shipping Address -->
                <div class="section-card mt-3">
                    <h5 class="mb-3"><i class="fas fa-shipping-fast me-2"></i>Shipping Address</h5>
                    <% if (address) { %>
                        <div class="address-details">
                            <p><strong>Name:</strong> <%= address.fullname %></p>
                            <p><strong>Street:</strong> <%= address.street %></p>
                            <p><strong>Landmark:</strong> <%= address.landmark %></p>
                            <p><strong>City:</strong> <%= address.city %></p>
                            <p><strong>State:</strong> <%= address.state %></p>
                            <p><strong>ZIP Code:</strong> <%= address.zipCode %></p>
                            <p><strong>Phone:</strong> <%= address.phone %></p>
                        </div>
                    <% } else { %>
                        <p>Address information not available</p>
                    <% } %>
                </div>
            </div>

            <div class="col-md-6">
                <!-- Order Summary -->
                <div class="section-card">
                    <h5 class="mb-3"><i class="fas fa-file-invoice me-2"></i>Order Summary</h5>
                    <div class="order-info">
                        <p><strong>Order Date:</strong> <%= order.createdOn.toDateString() %></p>
                        <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
                        <p><strong>Order Status:</strong> <%= order.status %></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Items -->
        <div class="section-card mt-4">
            <h5 class="mb-3"><i class="fas fa-shopping-cart me-2"></i>Order Items</h5>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Size</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.orderItems.forEach(item => { %>
                            <tr>
                                <td><%= item.product.productName %></td>
                                <td><%= item.size || 'N/A' %></td>
                                <td><%= item.quantity %></td>
                                <td>₹<%= item.price %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <div class="price-summary">
                <div class="price-item">
                    <span>Subtotal</span>
                    <span>₹<%= order.totalPrice %></span>
                </div>
                <div class="price-item">
                    <span>Discount</span>
                    <span>-₹<%= order.discount %></span>
                </div>
                <div class="price-item total">
                    <span>Total Amount</span>
                    <span>₹<%= order.totalAmount %></span>
                </div>
            </div>
        </div>

        <!-- Update Status Section -->
        <div class="section-card">
            <h5 class="mb-3"><i class="fas fa-tasks me-2"></i>Update Order Status</h5>
            <form id="statusForm" class="mt-3">
                <div class="row align-items-end">
                    <div class="col-md-6">
                        <select name="status" id="status" class="status-select">
                            <% if (order.status === 'Pending') { %>
                                <option value="Pending" selected>Pending</option>
                                <option value="Processing">Processing</option>
                                <option value="Shipped">Shipped</option>
                            <% } else if (order.status === 'Processing') { %>
                                <option value="Processing" selected>Processing</option>
                                <option value="Shipped">Shipped</option>
                            <% } else if (order.status === 'Shipped') { %>
                                <option value="Shipped" selected>Shipped</option>
                                <option value="Delivered">Delivered</option>
                            <% } else if (order.status === 'Delivered') { %>
                                <option value="Delivered" selected>Delivered</option>
                            <% } %>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="update-btn" id="updateBtn" disabled>Update Status</button>
                    </div>
                </div>
            </form>
            <div id="statusMessage" class="mt-3"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Enable button only when status changes
        const statusSelect = document.getElementById('status');
        const updateBtn = document.getElementById('updateBtn');
        const originalStatus = statusSelect.value;

        statusSelect.addEventListener('change', function() {
            updateBtn.disabled = statusSelect.value === originalStatus;
        });

        document.getElementById('statusForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const status = statusSelect.value;

            try {
                const response = await fetch(`/admin/orders/<%= order.orderId %>/update-status`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status })
                });

                const result = await response.json();

                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Status Updated',
                        text: result.message,
                        confirmButtonColor: '#b0d5de'
                    }).then(() => {
                        setTimeout(() => {
                            location.reload();
                        }, 1000);
                    });
                } else {
                    throw new Error(result.error);
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: error.message || 'Failed to update status',
                    confirmButtonColor: '#b0d5de'
                });
            }
        });
    </script>
</body>
</html>
